{
  "name": "nextjs-template",
  "version": "0.0.0",
  "scripts": {
    "build": "next build",
    "export": "next export",
    "clean": "rimraf .next",
    "develop": "next",
    "format": "prettier --write '**/*.{js,md,scss,ts,tsx,yml}' '!**/{build,es,lib,storybook,ts,umd}/**'",
    "format:diff": "prettier --list-different '**/*.{js,md,scss,ts,tsx,yml}' '!**/{build,es,lib,storybook,ts,umd}/**'",
    "format:styles": "stylelint --fix '**/*.{css,scss}' --report-needless-disables --report-invalid-scope-disables",
    "lint": "eslint src",
    "lint:styles": "stylelint '**/*.{css,scss}' --report-needless-disables --report-invalid-scope-disables",
    "start": "next start",
    "test": "jest",
    "ts": "tsc --noEmit --incremental",
    "ts:watch": "yarn ts --watch",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@carbon/styles": "^1.23.0",
    "@markdoc/markdoc": "^0.2.2",
    "@markdoc/next.js": "^0.2.1",
    "@next/bundle-analyzer": "^13.1.6",
    "@next/font": "^13.2.2",
    "@react-spring/web": "^9.7.1",
    "formik": "^2.2.9",
    "next": "^13.1.0",
    "next-seo": "^5.15.0",
    "react": "^18.2.0",
    "react-aria": "^3.22.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-refractor": "^2.1.7",
    "sass": "^1.43.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/react": "18.0.28",
    "@types/refractor": "^3.0.2",
    "css-loader": "^6.7.3",
    "cssnano": "^5.1.15",
    "eslint": "^7.32.0",
    "eslint-config-carbon": "^2.8.0",
    "eslint-config-next": "^12.0.1",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^11.2.6",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass": "^8.0.0",
    "postcss-loader": "^7.0.2",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.4.1",
    "prettier-config-carbon": "^0.4.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-carbon": "^1.7.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint"
    ],
    "**/*.scss": [
      "prettier --write",
      "stylelint --report-needless-disables --report-invalid-scope-disables --allow-empty-input"
    ],
    "**/*.{md,yml}": [
      "prettier --write"
    ]
  }
}
